<UI>
	<!-- general square button -->
    <Frame name="HslSquareButton" mixin="HslSquareButtonMixin" virtual="true" enableMouse="true">
        <Size x="60" y="60"/>
        <Layers>
            <Layer level="BORDER">
                <Texture parentKey="Border" atlas="TalkingHeads-Neutral-PortraitFrame" useAtlasSize="false">
                    <Size x="66" y="66"/>
                    <Anchors>
                        <Anchor point="CENTER"/>
                    </Anchors>
                </Texture>
            </Layer>
            <Layer level="HIGHLIGHT">
                <Texture parentKey="Highlight" atlas="communities-create-avatar-border-hover" useAtlasSize="false" hidden="true">
                    <Size x="60" y="60"/>
                    <Anchors>
                        <Anchor point="CENTER"/>
                    </Anchors>
                </Texture>
            </Layer>            
            <Layer level="BORDER" textureSubLevel="-1">
                <Texture parentKey="Background" useAtlasSize="false">
                    <Size x="56" y="56"/>
                    <Anchors>
                        <Anchor point="CENTER"/>
                    </Anchors>
                </Texture>
            </Layer>
        </Layers>
        <Scripts>
            <OnEnter method="OnEnter"/>
            <OnLeave method="OnLeave"/>
            <OnMouseDown method="OnMouseDown"/>
            <OnMouseUp method="OnMouseUp"/>
        </Scripts>
    </Frame>

	<!-- a simple frame with a background texture and a font string -->
	<Frame name="HslTexturedTextbox" mixin="HslTexturedTextboxMixin" virtual="true">
		<Size x="100" y="25"/>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture parentKey="Background" atlas="titleprestige-title-bg" useAtlasSize="false" setAllPoints="true"/>
			</Layer>
			<Layer level="OVERLAY">
				<FontString parentKey="Text" inherits="QuestFontHighlight">
					<Anchors>
						<Anchor point="CENTER" x="0" y="3"/>
					</Anchors>
					<Color r="0.121" g="0.054" b="0.007"/>
				</FontString>
			</Layer>
		</Layers>
	</Frame>

	<!-- the deck list view item -->
	<Frame name="HslDeckListviewItem" mixin="HslDeckListviewItemMixin" virtual="true" enableMouse="true">
		<Size x="200" y="40"/>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture parentKey="Background" atlas="PetList-ButtonBackground" useAtlasSize="false" setAllPoints="true"/>
			</Layer>
			<Layer level="HIGHLIGHT">
				<Texture parentKey="Background" atlas="PetList-ButtonHighlight" useAtlasSize="false" setAllPoints="true"/>
			</Layer>
			<Layer level="OVERLAY">
				<FontString parentKey="Text" inherits="QuestFontHighlight">
					<Anchors>
						<Anchor point="CENTER" x="0" y="0"/>
					</Anchors>
					<Color r="1" g="1" b="1"/>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<Frame parentKey="deleteDeck" mixin="HslDeleteDeckMixin" enableMouse="true">
				<Size x="18" y="18"/>
				<Anchors>
					<Anchor point="RIGHT" x="-10" y="0"/>
				</Anchors>
				<Layers>
					<Layer level="ARTWORK">
						<Texture atlas="BattleBar-SwapPetFrame-DeadIcon" setAllPoints="true" useAtlasSize="false"/>
					</Layer>
				</Layers>
				<Scripts>
					<OnMouseDown method="OnMouseDown"/>
				</Scripts>
			</Frame>
		</Frames>
	</Frame>

	<!-- card listview item -->
		<Frame name="HslCardListviewItem" mixin="HslCardListviewItemMixin" virtual="true" enableMouse="true">
		<Size x="200" y="36"/>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture parentKey="Background" atlas="PetList-ButtonBackground" useAtlasSize="false" setAllPoints="true"/>
			</Layer>
			<Layer level="HIGHLIGHT">
				<Texture parentKey="Highlight" atlas="PetList-ButtonHighlight" useAtlasSize="false" setAllPoints="true"/>
			</Layer>
			<Layer level="OVERLAY">
				<Texture parentKey="CostIcon" file="interface/icons/inv_elemental_mote_mana.blp" mask="Interface/ChatFrame/UI-ChatIcon-HotS" textureSubLevel="3">
					<Size x="30" y="30"/>					
					<Anchors>
						<Anchor point="LEFT" x="3" y="0"/>
					</Anchors>
				</Texture>
				<FontString parentKey="Cost" inherits="NumberFont_Outline_Large">
					<Anchors>
						<Anchor point="CENTER" relativePoint="CENTER" relativeKey="$parent.CostIcon" x="0" y="0"/>
					</Anchors>
					<Color r="1" g="1" b="1"/>
				</FontString>
				<Texture parentKey="Icon"  useAtlasSize="false">
					<Size x="30" y="30"/>					
					<Anchors>
						<Anchor point="BOTTOMRIGHT" x="-3" y="2"/>
					</Anchors>
				</Texture>
				<FontString parentKey="Name" inherits="QuestFontHighlight">
					<Anchors>
						<Anchor point="LEFT" relativePoint="RIGHT" relativeKey="$parent.CostIcon" x="5" y="0"/>
					</Anchors>
					<Color r="1" g="1" b="1"/>
				</FontString>
			</Layer>
		</Layers>
	</Frame>

	<!-- basic card template -->
	<Frame name="HslCard" mixin="HslCardMixin" virtual="true">
		<Size x="140" y="210"/>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture atlas="shop-games-legiondeluxe-card" setAllPoints="true" useAtlasSize="false"/>
			</Layer>
			<Layer level="BORDER">
				<Texture atlas="ChromieTime-Button-Frame" textureSubLevel="-1" useAtlasSize="false">
					<Size x="120" y="90"/>
					<Anchors>
						<Anchor point="BOTTOM" x="0" y="10"/>
					</Anchors>
				</Texture>
				<Texture parentKey="art" textureSubLevel="-1">
					<Size x="130" y="90"/>
					<Anchors>
						<Anchor point="TOP" x="0" y="-10"/>
					</Anchors>
				</Texture>

				<!-- added here due to layering with textureSubLevel doing nothing ? -->
				<Texture file="interface/common/portrait-ring-withbg.blp" textureSubLevel="1">
					<Size x="60" y="60"/>
					<Anchors>
						<Anchor point="TOPLEFT" x="-16" y="16"/>
					</Anchors>
				</Texture>
				<Texture file="interface/common/portrait-ring-withbg.blp" textureSubLevel="1">
					<Size x="60" y="60"/>
					<Anchors>
						<Anchor point="BOTTOMRIGHT" x="16" y="-16"/>
					</Anchors>
				</Texture>
				<Texture file="interface/common/portrait-ring-withbg.blp" textureSubLevel="1">
					<Size x="60" y="60"/>
					<Anchors>
						<Anchor point="BOTTOMLEFT" x="-16" y="-16"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="ARTWORK">
				<!-- mana icon top left -->
				<Texture file="interface/icons/inv_elemental_mote_mana.blp" mask="Interface/ChatFrame/UI-ChatIcon-HotS" textureSubLevel="3">
					<Size x="31" y="31"/>
					<Anchors>
						<Anchor point="TOPLEFT" x="-2" y="2"/>
					</Anchors>
				</Texture>

				<Texture parentKey="elite" atlas="GarrMission_EncounterBar-Elite" useAtlasSize="true" hidden="true">
					<Anchors>
						<Anchor point="TOPRIGHT" x="12" y="10"/>
					</Anchors>
				</Texture>

				<!-- health bottom right -->
				<Texture file="interface/icons/spell_holy_sealofsacrifice.blp" mask="Interface/ChatFrame/UI-ChatIcon-HotS" textureSubLevel="3">
					<Size x="32" y="32"/>
					<Anchors>
						<Anchor point="BOTTOMRIGHT" x="2" y="-2"/>
					</Anchors>
				</Texture>

				<!-- power bottom left -->
				<Texture file="interface/icons/inv_sword_04.blp" mask="Interface/ChatFrame/UI-ChatIcon-HotS" textureSubLevel="3">
					<Size x="32" y="32"/>
					<Anchors>
						<Anchor point="BOTTOMLEFT" x="-2" y="-2"/>
					</Anchors>
				</Texture>

				<!-- name banner -->
				<Texture atlas="GarrMission_RewardsBanner-Desaturate" textureSubLevel="1" useAtlasSize="false">
					<Size x="140" y="55"/>
					<Anchors>
						<Anchor point="CENTER" x="0" y="-5"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="OVERLAY">
				<FontString parentKey="cost" inherits="NumberFont_Outline_Large" text="10" justifyH="CENTER" justifyV="CENTER">
					<Size x="25" y="25"/>
					<Anchors>
						<Anchor point="TOPLEFT" x="0" y="0"/>
					</Anchors>
				</FontString>
				<FontString parentKey="power" inherits="NumberFont_Outline_Large" text="10" justifyH="CENTER" justifyV="CENTER">
					<Size x="25" y="25"/>
					<Anchors>
						<Anchor point="BOTTOMLEFT" x="0" y="0"/>
					</Anchors>
				</FontString>
				<FontString parentKey="health" inherits="NumberFont_Outline_Large" text="10" justifyH="CENTER" justifyV="CENTER">
					<Size x="25" y="25"/>
					<Anchors>
						<Anchor point="BOTTOMRIGHT" x="0" y="0"/>
					</Anchors>
				</FontString>
				<FontString parentKey="name" inherits="NumberFont_Outline_Large" text="Flame Dragon">
					<Anchors>
						<Anchor point="CENTER" x="0" y="-2"/>
					</Anchors>
				</FontString>
				<FontString parentKey="info" inherits="GameFontNormalSmall">
					<Size x="110" y="70"/>
					<Color r="1" g="1" b="1"/>
					<Anchors>
						<Anchor point="BOTTOM" x="0" y="20"/>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>

		<Scripts>
			<OnShow method="OnShow"/>
		</Scripts>
	</Frame>




	<!-- dropdown menu, we use this to avoid tainting the blizz menus -->
	<Frame name="HslDropdown" mixin="HslDropdownMixin" virtual="true" enableMouse="true">
		<Size x="108" y="30"/>
        <Anchors>
            <Anchor point="CENTER" x="0" y="0"/>
        </Anchors>
        <Layers>
            <Layer level="BACKGROUND">
				<Texture parentKey="BackgroundLeft" atlas="128-redbutton-left-disabled" useAtlasSize="false">
					<Size x="60" y="30"/>
					<Anchors>
						<Anchor point="TOPLEFT" x="0" y="0"/>
					</Anchors>
				</Texture>
				<Texture parentKey="BackgroundMiddle" textureSubLevel="-1" atlas="_128-redbutton-center-disabled" useAtlasSize="false">
					<Size x="10" y="30"/>
					<Anchors>
						<Anchor point="TOPLEFT" x="60" y="0"/>
					</Anchors>
				</Texture>
                <Texture parentKey="BackgroundRight" atlas="128-redbutton-right-disabled" useAtlasSize="false">
					<Size x="30" y="30"/>
					<Anchors>
						<Anchor point="TOPRIGHT" x="0" y="0"/>
					</Anchors>
				</Texture>
            </Layer>
			<Layer level="OVERLAY">
				<FontString parentKey="Text" inherits="GameFontNormalSmall" text="">
					<Color r="1" g="1" b="1"/>
					<!-- <Size x="" y=""/> -->
					<Anchors>
						<Anchor point="LEFT" x="8" y="0"/>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Frames>
			<Frame parentKey="Button" mixin="HslDropdownButtonMixin" enableMouse="true">
				<Size x="27" y="26"/>
				<Anchors>
					<Anchor point="TOPRIGHT" x="-4" y="-2"/>
				</Anchors>
				<Layers>
					<Layer level="BACKGROUND">
						<Texture parentKey="ButtonHighlight" atlas="transmog-frame-highlighted-small" useAtlasSize="false" hidden="true">
							<Size x="23" y="22"/>
							<Anchors>
								<Anchor point="RIGHT" x="0" y="0"/>
							</Anchors>
						</Texture>
					</Layer>
					<Layer level="ARTWORK">
						<Texture parentKey="ButtonUp" atlas="auctionhouse-ui-dropdown-arrow-up" useAtlasSize="false">
							<Size x="23" y="22"/>
							<Anchors>
								<Anchor point="RIGHT" x="0" y="0"/>
							</Anchors>
						</Texture>
						<Texture parentKey="ButtonDown" atlas="auctionhouse-ui-dropdown-arrow-down" useAtlasSize="false" hidden="true">
							<Size x="23" y="22"/>
							<Anchors>
								<Anchor point="RIGHT" x="0" y="0"/>
							</Anchors>
						</Texture>
					</Layer>
				</Layers>
				<Scripts>
					<OnEnter method="OnEnter"/>
					<OnLeave method="OnLeave"/>
					<OnMouseDown method="OnMouseDown"/>
					<OnMouseUp method="OnMouseUp"/>
				</Scripts>
			</Frame>
			<Frame parentKey="Flyout" mixin="HslDropdownFlyoutMixin" hidden="true">
				<Size x="100" y="275"/>
				<Anchors>
					<Anchor point="TOPLEFT" x="2" y="-28"/>
				</Anchors>
				<Layers>
					<Layer level="BORDER">
						<Texture parentKey="Background" atlas="auctionhouse-background-buy-commodities-market" useAtlasSize="false"> 
							<Anchors>
								<Anchor point="TOPLEFT" x="-1" y="1"/>
								<Anchor point="BOTTOMRIGHT" x="1" y="-1"/>
							</Anchors>
						</Texture>
					</Layer>
				</Layers>
				<Scripts>
					<OnShow method="OnShow"/>
					<OnLeave method="OnLeave"/>
				</Scripts>
			</Frame>
		</Frames>
		<Scripts>
			<OnShow method="OnShow"/>
		</Scripts>
	</Frame>

	<!-- dropdown menu button -->
	<Frame name="HslDropDownButton" mixin="HslDropDownFlyoutButtonMixin" virtual="true" enableMouse="true">
        <Size x="50" y="22"/>
        <Anchors>
            <Anchor point="CENTER" x="0" y="0"/>
        </Anchors>
        <Layers>
            <Layer level="BORDER">
                <!-- <Texture parentKey="Background" atlas="friendslist-categorybutton" useAtlasSize="false" setAllPoints="true"/> -->
			</Layer>
			<Layer level="BACKGROUND">
                <Texture parentKey="Highlight" atlas="soulbinds_collection_entry_selected" useAtlasSize="false" hidden="true">
                	<Anchors>
                		<Anchor point="TOPLEFT" x="0" y="-1"/>
                		<Anchor point="BOTTOMRIGHT" x="0" y="1"/>
                	</Anchors>
				</Texture>
            </Layer>
            <Layer level="ARTWORK">
                <FontString parentKey="Text" inherits="GameFontNormal_NoShadow" justifyH="LEFT">
                	<Anchors>
                		<Anchor point="LEFT" x="2" y="0"/>
                	</Anchors>
                	<Color r="1" g="1" b="1"/>
                </FontString>
            </Layer>
        </Layers>
		<Scripts>
            <OnEnter method="OnEnter"/>
            <OnLeave method="OnLeave"/>
            <OnMouseDown method="OnMouseDown"/>
		</Scripts>
    </Frame>

</UI>